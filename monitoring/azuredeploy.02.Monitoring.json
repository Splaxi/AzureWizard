{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceName": {
      "type": "string"
    }
  },
  "variables": {
    "logsName": "[concat(parameters('resourceName'), 'logs')]",
    "appInsightsName": "[concat(parameters('resourceName'), 'ai')]"
  },
  "resources": [
    {
      "apiVersion": "2015-05-01",
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Insights/components",
      "name": "[variables('appInsightsName')]",
      "kind": "web",
      "properties": {
        "Application_Type": "web"
      }
    },
    {
      "apiVersion": "2017-03-15-preview",
      "type": "Microsoft.OperationalInsights/workspaces",
      "name": "[variables('logsName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "name": "Standalone"
        }
      },
      "resources": [
        {
          "apiVersion": "2015-11-01-preview",
          "location": "[resourceGroup().location]",
          "name": "[concat('ServiceMap', '(', variables('logsName'), ')')]",
          "type": "Microsoft.OperationsManagement/solutions",
          "dependsOn": [
            "[concat('Microsoft.OperationalInsights/workspaces/', variables('logsName'))]"
          ],
          "properties": {
            "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('logsName'))]"
          },
          "plan": {
            "name": "[concat('ServiceMap', '(', variables('logsName'),')')]",
            "publisher": "Microsoft",
            "product": "[Concat('OMSGallery/', 'ServiceMap')]",
            "promotionCode": ""
          }
        },
        {
          "apiVersion": "2015-11-01-preview",
          "location": "[resourceGroup().location]",
          "name": "[concat('InfrastructureInsights', '(', variables('logsName'), ')')]",
          "type": "Microsoft.OperationsManagement/solutions",
          "dependsOn": [
            "[concat('Microsoft.OperationalInsights/workspaces/', variables('logsName'))]"
          ],
          "properties": {
            "workspaceResourceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', variables('logsName'))]"
          },
          "plan": {
            "name": "[concat('InfrastructureInsights', '(', variables('logsName'), ')')]",
            "publisher": "Microsoft",
            "product": "[Concat('OMSGallery/', 'InfrastructureInsights')]",
            "promotionCode": ""
          }
        }
      ]
    }
  ],
  "outputs": {
    "workSpace": {
      "type": "string",
      "value": "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logsName'))]"
    },
    "instrumentationKey": {
      "type": "string",
      "value": "[reference(resourceId('microsoft.insights/components/', variables('appInsightsName')), '2015-05-01').InstrumentationKey]"
    }
  }
}